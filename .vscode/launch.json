{
    // Launch configuration for debuggng Next.js app
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Next.js: debug server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "console": "integratedTerminal",
            "env": {
                "NODE_OPTIONS": "--inspect"
            }
        }
    ]
}